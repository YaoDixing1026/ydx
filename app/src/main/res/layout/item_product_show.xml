<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/item_product_left_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/left_image_layout"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <in.srain.cube.image.CubeImageView
                android:id="@+id/left_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                </LinearLayout>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/left_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aa"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/left_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/item_product_right_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/right_image_layout"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <in.srain.cube.image.CubeImageView
                    android:id="@+id/right_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/right_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aa"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/right_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
