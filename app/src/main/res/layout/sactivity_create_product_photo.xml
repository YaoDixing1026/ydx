<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/choose_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choose first type"/>
    <Button
        android:id="@+id/choose_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choose second type"/>
    <Button
        android:id="@+id/choose_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choose third type"/>
    <Button
        android:id="@+id/choose_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choose product"/>
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go"/>
</LinearLayout>
